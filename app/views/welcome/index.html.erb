<header id="top" class="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="height: 20px">
            </div>
        </div>
        <div class ="row">
            <div class="col-md-6">
                <h1 style = "color: white; font-size: 80px;">treeHuddle</h1>
                <h3 style="color: white; font-size: 24px; text-align: left; font-family: 'Montserrat', sans-serif;">Studying in groups should be easy</h3>
            </div>
            <div class="col-sm-4 col-md-3 col-md-offset-5" style="float: right">
                <%= link_to 'Log In', new_user_session_path, class: "btn btn-dark btn-xlarge" %><br>
                <a class="btn btn-dark btn-xlarge" href="#getting-started"> Get Started</a>
            </div>
        </div>
    </div>
</header>




<div id="getting-started" class="services">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-12 col-md-12">
                    <h1 style="text-align: center"> Find out how treeHuddle can make your life easier!</h1>
                    <iframe align="center" width='600' height='400' src="http://www.youtube.com/embed/0DxmrCyLdF0" frameborder="100"></iframe><br>
                    <div style = "display: inline-block;float: left;margin: 50px;">
                        <h2 style="display:inline; margin: 10px">Ready to start?</h2>
                        <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-success btn-xlarge" %>
                    </div>
                    <div style = "display: inline-block;float: right;margin: 50px;">
                        <h2 style="display: inline; margin: 10px">Already a member?</h2>
                        <%= link_to 'Log In', new_user_session_path, class: "btn btn-success btn-xlarge" %>
                    </div>
            </div>
        </div>
</div>



<div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="first-slide" src="http://az616578.vo.msecnd.net/files/2016/04/28/635974526628760594-309475862_books.jpg" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
                <div id="words">
              <h1 style="font-size: 72px">Browse & Join</h1>
              <p style="font-size: 42px">existing huddles.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="second-slide" src="http://static1.squarespace.com/static/523cc9c9e4b05da1410671ef/t/56df8166859fd0fc993e2943/1457488233169/work--black-background--calendar--write_3325628.jpg?format=1500w" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
              <strong><h1 style="font-size: 82px; color: white;">Create</h1></strong>
              <p style="font-size: 42px; color: white">new huddles at convenient times for you.</p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="third-slide" src="http://blog.tigerbookstore.com/wp-content/uploads/2013/04/study.jpg" alt="Third slide">
          <div class="container">
            <div class="carousel-caption">
              <h1 style="font-size: 72px">Meet Up</h1>
              <p style="font-size: 42px">with other students.</p>
            </div>
          </div>
        </div>
      </div>
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="padding: 200px">
            <span class="fa fa-arrow-left fa-2x"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="padding: 200px">
            <span class="fa fa-arrow-right fa-2x"></span>
            <span class="sr-only">Next</span>
          </a>
    </div><!-- /.carousel -->
