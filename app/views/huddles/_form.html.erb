<% if @huddle.errors.present? %>
	<% @huddle.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end%>

<%= form_for @huddle do |f| %>
<p>
	<%= f.label :class %><br>
	<%= f.text_field :subject %>
</p>
<p>
	<%= f.label :assignment %><br>
	<%= f.text_field :assignment %>
</p>
<p>
	<%= f.label :place %><br>
	<%= f.text_field :where %>
</p>
<p>
	<%= f.label :date_and_time %><br>
	<%= f.date_select :date %>
</p>
<p>
	<%= f.label :start_time %><br>
	<%= f.time_select :start_time, ampm: true %>
</p>
<p>
	<%= f.label :end_time %><br>
	<%= f.time_select :end_time, ampm: true %>
</p>
<p>
	<%= f.label :maximum_number_of_participants %><br>
	<%= f.text_field :part_max %>
</p>
<p>
	<%= f.label :message %><br>
	<%= f.text_area :message %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>