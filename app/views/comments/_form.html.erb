<% if @comment.errors.present? %>
	<% @comment.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end%>

<%= form_for @comment do |f| %>
	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message %>
	</p>
	<%= f.hidden_field :huddle_id, value: @huddle.id %>
	<p>
		<%= f.submit %>
	</p>
<% end %>